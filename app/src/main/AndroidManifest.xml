<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.nux.dhoan9.firstmvvm"
          android:versionCode="1"
          android:versionName="1.0">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.SlashActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"/>
        <activity
            android:name=".view.activity.ChefActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".view.activity.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"/>
        <activity android:name=".view.activity.ColorChangeActivity"/>
        <activity android:name=".view.activity.ProfileActivity">
        </activity>
        <activity
            android:name=".view.activity.CustomerActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".view.activity.QRCodeScanActivity">
        </activity>
        <activity
            android:name=".view.activity.DishDetailActivity"
            android:theme="@style/AppTheme.NoActionBar.NoStatusBar"/>
        <activity android:name=".view.activity.CartActivity">
        </activity>
        <activity android:name=".view.activity.HistoryActivity">
        </activity>
        <activity android:name=".view.activity.DishesByCategoryActivity">
        </activity>
    </application>

</manifest>