<layout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.nux.dhoan9.firstmvvm.viewmodel.CartItemViewModel"/>

        <variable
            name="viewModel"
            type="CartItemViewModel"/>
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="8dp"
                                        android:layout_marginLeft="4dp"
                                        android:layout_marginRight="4dp"
                                        android:orientation="vertical"
                                        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/ivCover"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/chocolate_ball"/>

                <TextView
                    android:id="@+id/tvDishName"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCancel"
                    android:layout_toRightOf="@+id/ivCover"
                    android:fontFamily="serif-monospace"
                    android:text="@{viewModel.name}"
                    android:textSize="@dimen/size_x_large_text"/>

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCancel"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toLeftOf="@+id/ivPlus"
                    android:fontFamily="serif-monospace"
                    android:text="@{viewModel.quantityView}"
                    android:textSize="@dimen/size_x_large_text"/>

                <ImageView
                    android:id="@+id/ivPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvQuantity"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/tvQuantity"
                    android:layout_below="@+id/tvCancel"
                    android:onClick="@{() -> viewModel.onPlusClick()}"
                    android:src="@drawable/ic_add"/>

                <ImageView
                    android:id="@+id/ivMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/tvQuantity"
                    android:layout_alignTop="@+id/tvQuantity"
                    android:layout_below="@+id/tvCancel"
                    android:layout_toLeftOf="@+id/tvQuantity"
                    android:onClick="@{() -> viewModel.onMinusClick()}"
                    android:src="@drawable/ic_minus"/>

                <TextView
                    android:id="@+id/tvResult"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvDishName"
                    android:layout_marginTop="8dp"
                    android:layout_toRightOf="@id/tvDishName"
                    android:fontFamily="serif-monospace"
                    android:gravity="end"
                    android:text='@{String.valueOf(viewModel.price) + " x " + viewModel.quantityView}'
                    android:textAlignment="textEnd"
                    android:textSize="@dimen/size_x_large_text"/>

                <TextView
                    android:id="@+id/tvCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="8dp"
                    android:text="cancel"
                    android:textAllCaps="true"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/size_medium_text"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <include layout="@layout/devider_layout"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif-monospace"
                    android:text="@string/item_cart_sum"
                    android:textSize="@dimen/size_large_text"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:fontFamily="serif-monospace"
                    android:text='@{"$ " + viewModel.totalView}'
                    android:textSize="@dimen/size_large_text"
                    android:textStyle="bold"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>