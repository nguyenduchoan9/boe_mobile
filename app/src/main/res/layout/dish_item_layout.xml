<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="com.nux.dhoan9.firstmvvm.viewmodel.DishViewModel"/>

        <variable
            name="viewModel"
            type="DishViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:setImage="@{viewModel.image}"
            tools:src="@drawable/chocolate_ball"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewModel.name}"
            style="@style/AppTheme.DishTitle"
            tools:text="etetet"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/whiteDark"
            android:gravity="left"
            android:text='@{String.valueOf(viewModel.price)}'
            android:textSize="@dimen/size_small_text"
            tools:text="100000"/>
    </LinearLayout>
</layout>