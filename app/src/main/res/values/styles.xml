<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.NoStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="CustomInputEditText">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/whiteDark</item>
        <item name="android:textColorHint">@color/whiteDark</item>
    </style>

    <style name="LoginButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/tiny_space</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:background">@drawable/login_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="RegisterButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/tiny_space</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:background">@drawable/register_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="PayButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/tiny_space</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:background">@drawable/pay_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="DetailButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/tiny_space</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DetailButton.OrderButton" parent="DetailButton">
        <item name="android:background">@drawable/order_button</item>
    </style>

    <style name="DetailButton.CancelButton" parent="DetailButton">
        <item name="android:background">@drawable/cancel_button</item>
    </style>

    <style name="TotalPaymentTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/total_payment_bg</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ClearOrderTextView">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/clear_payment_bg</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="ContinuesButton">
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:background">@drawable/pay_payment_bg</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.NavigationView">
        <item name="android:listDivider">@color/colorDividerNavigation</item>
        <item name="android:textColorSecondary">@color/colorTextNavigation</item>
        <item name="android:textColorPrimary">@color/colorTextPrimaryNavigation</item>
    </style>

    <style name="Button">
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
    </style>

    <style name="RedButton" parent="Button">
        <item name="android:background">@drawable/red_button</item>
    </style>

    <style name="AppTheme.EditText">
        <item name="colorControlNormal">@color/gray_light</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DishName">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">2</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/size_medium_text</item>
    </style>

    <style name="AppTheme.DishTitle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:maxLines">2</item>
        <item name="android:textColor">@color/whiteDark</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">@dimen/size_small_text</item>
    </style>
</resources>
